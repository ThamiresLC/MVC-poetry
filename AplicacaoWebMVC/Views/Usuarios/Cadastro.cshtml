@model AplicacaoWebMVC.ViewModels.UsuarioViewModel
@{
	Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<link rel="stylesheet" href="~/css/Usuario/cadastro.css" asp-append-version="true" />


<div class="wrapper">
	<form asp-action="Cadastro" asp-controller="Usuarios" method="post">
		<div class="h5 font-weight-bold text-center mb-3"><i class="fonteTitulo  bi bi-moon-stars-fill">Register</i></div>
		<div class="form-group d-flex align-items-center">
			<div class="icon"><span class="far fa-user"></span></div> <input autocomplete="off" tabindex="1" type="text" class="form-control" placeholder="User" name="User">
		</div>
		<div class="form-group d-flex align-items-center">
			<div class="icon"><span class="far fa-envelope"></span></div> <input autocomplete="off" tabindex="2" type="email" class="form-control" placeholder="E-mail" name="Email">
		</div>
		<div class="form-group d-flex align-items-center">
			<div class="icon"><span class="fas fa-phone"></span></div> <input autocomplete="off" Id="telefone" tabindex="3" type="tel" class="form-control" placeholder="Celular" name="Celular"> 
		</div>
		<div class="form-group d-flex align-items-center">
			<div class="icon"><span class="fas fa-key"></span></div> <input autocomplete="off" tabindex="4" type="password" class="form-control" placeholder="Senha" name="NovaSenha">
			<div class="icon btn"><span class="fas fa-eye-slash"></span></div>
		</div>
		<div class="mb-4 mt-5"> <label class="option">Fique conectado<input type="checkbox" class="checkbox" checked> <span class="checkmark"></span> </label> </div>
		<span class="group-btn">
			<a tabindex="5" asp-controller="Usuarios" asp-action="Login" class="btn btn-danger btn-lg botao"><i class="bi bi-arrow-bar-left"></i>  Login</a>
			<button type="submit" tabindex="6" class="btn btn-secondary btn-lg botao">Register  <i class="bi bi-person-plus-fill"></i></button>
		</span>
		<ul class="p-0 social-links">
			<li><a target="_blank" href="https://web.facebook.com/?_rdc=1&_rdr"><span class="fab fa-facebook-f"></span></a></li>
			<li><a target="_blank" href="https://www.instagram.com/"><span class="fab fa-instagram"></span></a></li>
			<li><a target="_blank" href="https://accounts.google.com/signin/v2/identifier?hl=pt-BR&passive=true&continue=https%3A%2F%2Fwww.google.com.br%2F&ec=GAZAmgQ&flowName=GlifWebSignIn&flowEntry=ServiceLogin"><span class="fab fa-google"></span></a></li>
		</ul>
	</form>
</div>

