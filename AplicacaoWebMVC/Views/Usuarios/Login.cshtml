@{
	ViewData["Title"] = "Home Page";
	Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<link rel="stylesheet" href="~/css/Usuario/cadastro.css" asp-append-version="true" />


<div class="wrapper">
	<div class="form-login">
		<div class="font-weight-bold text-center mb-3 mt-2"><i class="fonteTitulo  bi bi-moon-stars-fill">Poetry</i></div>
		<div class="fonteTitulo2 font-weight-bold text-center mt-4"> Login </div>
		<div class="form-group d-flex align-items-center mt-4">
			<div class="icon"><span class="far fa-user"></span></div> <input autocomplete="off" tabindex="1" type="text" class="form-control" id="userName" placeholder="User" name="User">
		</div>
		<div class="form-group d-flex align-items-center">
			<div class="icon"><span class="fas fa-key"></span></div> <input autocomplete="off" tabindex="2" type="password" class="form-control" id="userPassword" placeholder="Senha" name="NovaSenha">
			<div class="icon btn"><span class="fas fa-eye-slash"></span></div>
		</div>
			<a asp-action="SolicitarRecuperacaoSenha" asp-controller="Autenticacao" class="esqueceusenha" style="font-size:20px;"> Esqueceu a senha?</a>
		<div class="mt-5 mb-5 conectado"> 
			<label class="option">Fique conectado<input type="checkbox" class="checkbox" checked> <span class="checkmark"></span> </label> 
		</div>
		<span class="group-btn">
			<a tabindex="3" onclick="Login();" class="btn btn-danger btn-lg botao">Sing-in <i class="bi bi-arrow-bar-right"></i></a>
			<a tabindex="4" asp-controller="Usuarios" asp-action="Cadastro" class="btn btn-secondary btn-lg  botao">Register <i class="bi bi-person-hearts"></i></a>
		</span>
		<ul class="p-0 social-links">
			<li><a target="_blank" href="https://web.facebook.com/?_rdc=1&_rdr"><span class="fab fa-facebook-f"></span></a></li>
			<li><a target="_blank" href="https://www.instagram.com/"><span class="fab fa-instagram"></span></a></li>
			<li><a target="_blank" href="https://accounts.google.com/signin/v2/identifier?hl=pt-BR&passive=true&continue=https%3A%2F%2Fwww.google.com.br%2F&ec=GAZAmgQ&flowName=GlifWebSignIn&flowEntry=ServiceLogin"><span class="fab fa-google"></span></a></li>
		</ul>
	</div>
</div>